Scanner sc= new Scanner(System.in);
		System.out.println("Enter the value of n : ");
		int n = sc.nextInt();
		int a =1, b=1;
		
		//if even term
		if(n % 2 == 0) {
			for(int i =1; i<=(n-2);i+=2) {
				a= a*2;
				b=b*3;
			}	
			System.out.println(n+"th element of series is :" +b);
		}
		
		//for odd term
		else {
			for(int i =1; i<=(n-2);i+=2) {
				a= a*2;
				b=b*3;
			}
			System.out.println(n+"th element of series is :" +a);
		}
		
